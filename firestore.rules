rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Users can read and write their own game history
      match /gameHistory/{gameId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Allow authenticated users to read leaderboard data (other users' public stats)
    match /users/{userId} {
      allow read: if request.auth != null;
    }
    
    // Allow authenticated users to create and update their own documents
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId 
        && request.auth.uid == resource.data.uid;
    }
  }
}
